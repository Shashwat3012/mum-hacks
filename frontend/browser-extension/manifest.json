{
  "manifest_version": 3,
  "name": "Miss. Information",
  "version": "1.0",
  "description": "Check selected text for misinformation â€” sleek UI with history, copy, context menu and themes.",
  "permissions": [
    "activeTab",
    "scripting",
    "contextMenus",
    "storage",
    "notifications"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Miss. Information"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
